@using RealityProjectWeb.Areas.Admin.Models
@model LogInModel
@{
    Layout = null;
}
<!DOCTYPE html>
<!-- Created By CodingLab - www.codinglabweb.com -->
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title> 
    <link rel="stylesheet" href="~/css/Admin/Login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    
<div class="container">
    <div class="wrapper">
        <div class="title"><span>Login Form</span></div>
        <form asp-action="LogIn" method="post">
            <div class="row">
                <i class="fas fa-user"></i>
                <input asp-for="UserName" type="text" placeholder="Email or Phone" required value="jbohacek">
            </div>
            <div class="row">
                <i class="fas fa-lock"></i>
                <input asp-for="Password" type="password" placeholder="Password" required value="123456">
            </div>
            <div class="row button">
                <input type="submit" value="Login">
            </div>
            <div style="display: flex; justify-content: center">
                <a id="GoBack" asp-area="User" asp-controller="Home" asp-action="Index"><i class="bi bi-box-arrow-left"></i> Go back</a>
            </div>
            <div class="signup-link">@ViewBag.Valid</div>

        </form>
    </div>
</div>

</body>
</html>
@model RealityProject.DataAccess.DataModels.Parameters.Group

<!-- Button trigger modal -->
<button type="button" class="Button" data-bs-toggle="modal" data-bs-target="#@("Modal" + Model.Id.ToString().Substring(0,8))">
    Open
</button>

<!-- Modal -->
<form asp-action="Upsert" method="post" >
    <input asp-for="Id" hidden/>

    <div class="modal fade" id="@("Modal" + Model.Id.ToString().Substring(0, 8))" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">@Model.Name</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Group Name</label>
                        <input required asp-for="Name" type="text" class="form-control" id="exampleInputPassword1" placeholder="Name">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>

@using RealityProject.DataAccess.DataModels.Parameters
@model IDictionary<RealityProject.DataAccess.DataModels.Parameters.Group, int>

@{
    ViewBag.Title = "Group list";
    Layout = "_Layout_Admin";
}

@section Styles{
    <link rel="stylesheet" media="all" href="https://s3.amazonaws.com/dynatable-docs-assets/css/jquery.dynatable.css" />
    <link rel="stylesheet" media="all" href="~/css/Admin/Table.css" />}
@section Scripts{
    <script type='text/javascript' src='https://s3.amazonaws.com/dynatable-docs-assets/js/jquery.dynatable.js'></script>
    <script>
        $(document).ready(function() {
            $('#groups').dynatable();
        } );
    </script>
}




<div class="d-flex justify-content-between align-items-end my-4">
    <h2 class="display-3">Groups</h2>
    @await Component.InvokeAsync("GroupAdd",new Group())
</div>

<table id="groups" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
    <tr>
        <th>Name</th>
        <th>Usage</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Key.Name</td>
            <td>@item.Value</td>
            <td>@await Component.InvokeAsync("GroupEdit",item.Key)</td>
        </tr>
    }
    </tbody>

</table>

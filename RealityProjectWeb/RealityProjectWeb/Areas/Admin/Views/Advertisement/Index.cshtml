@model List<RealityProject.DataAccess.DataModels.Adds.Advertisement>

@{
    ViewBag.Title = "Advertisements edit";
    Layout = "_Layout_Admin";
}

@section Styles{
    <link rel="stylesheet" media="all" href="https://s3.amazonaws.com/dynatable-docs-assets/css/jquery.dynatable.css" />
    <link rel="stylesheet" media="all" href="~/css/Admin/Table.css" />}
@section Scripts{
    <script type='text/javascript' src='https://s3.amazonaws.com/dynatable-docs-assets/js/jquery.dynatable.js'></script>
    <script>
        $(document).ready(function() {
            $('#advertisements').dynatable();
        } );
    </script>
}



<div class="d-flex justify-content-between align-items-end my-4">
    <h2 class="display-3">Advertisements</h2>
    <a asp-action="Upsert" asp-route-id="@null" class="btn btn-primary fs-4 px-3 py-1">New advertisement</a>
</div>

<table id="advertisements" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
    <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Size</th>
        <th>Price</th>
        <th>Electricity</th>
        <th>Seller</th>
        <th>Number Of photos</th>
        <th>Number Of request</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GetName()</td>
            <td>@item.HomeType.ToString()</td>
            <td>@item.InsideSize</td>
            <td>@item.GetPrice()</td>
            <td>@item.Electricity.ToString()</td>
            <td>@item.Seller.Username</td>
            <td>@item.Gallery.Count</td>
            <td>@item.Requests.Count</td>
            <td><a class="Button" asp-area="Admin" asp-controller="Advertisement" asp-action="Upsert" asp-route-id="@item.Id">Edit</a></td>
        </tr>
    }
    </tbody>

</table>

@model List<RealityProject.DataAccess.DataModels.UserManagement.User>

@{
    ViewBag.Title = "User list";
    Layout = "_Layout_Admin";
}

@section Styles{
    <link rel="stylesheet" media="all" href="https://s3.amazonaws.com/dynatable-docs-assets/css/jquery.dynatable.css" />
    <link rel="stylesheet" media="all" href="~/css/Admin/Table.css" />}
@section Scripts{
    <script type='text/javascript' src='https://s3.amazonaws.com/dynatable-docs-assets/js/jquery.dynatable.js'></script>
    <script>
        $(document).ready(function() {
            $('#users').dynatable();
        } );
    </script>
}



<div class="d-flex justify-content-between align-items-end my-4">
    <h2 class="display-3">Users</h2>
    <a asp-action="Upsert" asp-route-id="@null" class="btn btn-primary fs-4 px-3 py-1">New User</a>
</div>

<table id="users" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
    <tr>
        <th>UserName</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Role</th>
        <th>Email</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Username</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.UserRole.Name</td>
                <td>@item.Email</td>
                <td><a class="Button" asp-action="Upsert" asp-route-id="@item.Id">Edit</a></td>
            </tr>
        }
    </tbody>

</table>
